// How many GPUs to use?
// At the moment, this should be set to 1.
nGPU = 1;

// What is the input format? (not case-sensitive)
// Can be "FITS" or "HDFITS".
fileFormat = "FITS";

// Define how fits files are stored on disk
qCubeName = "CUBEDIR/cube_Q.fits";
uCubeName = "CUBEDIR/cube_U.fits";
freqFileName = "CUBEDIR/frequency.txt";

// Define the faraday depth axis. All units in rad/m/m
plotRMSF = False;
phiMin = -200.;
nPhi = 2001; // integer
dPhi = 0.2;

// Prefix for output filenames
outPrefix = "CUBEDIR/TAG";
